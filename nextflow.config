manifest {
    description = 'scrnaseq pipeline'
    mainScript = 'main.nf'
}

params {

    genomeName = "Mus_musculus.GRCm39.dna_sm.primary_assembly.fa"
    gtfName = "Mus_musculus.GRCm39.113.gtf"
    userID = "c.mcbsd1"
    workingDir = "/scratch/${userID}/scrnaseq-nextflow"
    organism = "Mus_musculus"
    userProjectCode = "scw1448"

    outdir = "results"
    resourcesDir = "resources"
    genome = "${workingDir}/resources/${genomeName}"
    gtf = "${workingDir}/resources/${gtfName}"
    data = "${workingDir}/data"
    cellrangerPath = "/scratch/c.mcbsd1/cellranger/cellranger-7.1.0"
    aggr = false
    res = "${workingDir}/results"

    sleepTimeStart = '0m'
    sleepTimeEnd = '0m'
    retries = '5'

    index = "${workingDir}/resources/index"

    srcDir = "src"
    inputDir = "input"
    outputDir = "output"
    resourcesDir = "resources"
    releaseDir = "release"

    copyGenomeJobLength = "30m"
    copyGTFJobLength = "30m"
    mkrefJobLength = "4h"
    mkrefMemory = "80.G"
    countJobCpus = "12"
    countJobLength = "4h"
    countJobMemory = "80.G"

  execution {
    queue_size = 100
    threads = 1
    max_retries = 5
    error_strategy = "retry"
  }
}

process {
    executor = "slurm"
    queue = "htc"
    clusterOptions = "-A ${params.userProjectCode}"
}

